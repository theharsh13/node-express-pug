extends ../layouts/main-layout.pug

block styles 
    link(rel="stylesheet", href="/css/orders.css")

block content
    main 
        if orders.length > 0
            ui.orders 
                each order in orders  
                    li.orders__item 
                        h1 Order # #{order._id}
                        ul.order__products 
                            each product in order.products
                                li.orders__products-item #{product.productData.title} (#{product.quantity})
        else 
            h1 Nothing there! 