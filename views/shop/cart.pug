extends ../layouts/main-layout.pug

block content
    main 
        if products.length > 0 
            ul 
                each product in products
                    li 
                        h4 #{product.productData.title} (#{product.qty}) 
                        form(action="/cart-delete-item", method="post") 
                            input(type="hidden", name="productId" value= product.productData.id)#productId 
                            button.btn Remove
            h3 Total : $ #{totalPrice}
        else 
            h1 No Products in Cart!